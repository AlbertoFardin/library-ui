{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "rootDirs": ["."],
    "outDir": "./package/",
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["**/*stories.tsx", "**/*spec.tsx", "**/*spec.ts", "**/__tests__"]
}
