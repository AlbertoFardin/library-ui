{
  "name": "@warda/library-ui",
  "version": "31.11.12",
  "description": "React components for faster and easier web development. Build your own design system, or start with Material Design.",
  "main": "index.js",
  "authors": "alberto.fardin@warda.it",
  "license": "ISC",
  "publishConfig": {
    "registry": "https://repo.warda.it/repository/warda-npm-releases/"
  },
  "scripts": {
    "start": "npm run storybook:start",
    "clean": "rimraf ./package && rimraf ./node_modules && npm install && npm audit fix",
    "package:clean": "rimraf ./package && mkdir -p ./package",
    "package:ts2js": "tsc -p ./tsconfig-publish.json && ts-node ./scripts/createPackageDist.ts name=@warda/library-ui",
    "package:copyCss": "copyfiles -u 1 src/**/*.css ./package",
    "package:copyWoff2": "copyfiles -u 1 src/**/*.woff2 ./package",
    "publish:create": "npm run package:clean && npm run package:ts2js && npm run package:copyCss && npm run package:copyWoff2",
    "publish:@warda": "npm run publish:create && ./scripts/publish.sh",
    "storybook:build-static": "rimraf ./.out/ && storybook build -s ./static-medias -c .storybook -o .out",
    "storybook:start": "storybook dev -s ../static-medias -p 9001 -h local.wardacloud.com -c .storybook",
    "check": "npm run check:eslint && npm run check:jest",
    "check:eslint": "eslint -c .eslintrc.js 'src/**/*.ts?(x)' --max-warnings=20  && echo \"eslint: no lint errors\"",
    "check:jest": "jest ./src/** --ci --no-watchman --detectOpenHandles --forceExit --reporters=default --testMatch='**/?(*.)+(spec|test).[jt]s?(x)'",
    "fmt": "prettier src --write",
    "cf": "npm run fmt && npm run check",
    "prepare": "husky install",
    "preversion": "npm run check"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "bytes": "^3.1.2",
    "classnames": "^2.3.2",
    "copy-to-clipboard": "^3.3.3",
    "copyfiles": "^2.4.1",
    "date-fns": "^2.30.0",
    "draft-js": "^0.11.7",
    "draft-js-export-html": "^1.4.1",
    "html-to-draftjs": "^1.5.0",
    "javascript-time-ago": "^2.5.11",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "moment": "^2.29.4",
    "openseadragon": "~5.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-day-picker": "^8.9.1",
    "react-dom": "^18.2.0",
    "react-draft-wysiwyg": "^1.15.0",
    "react-draggable": "^4.4.6",
    "react-ink": "^6.5.4",
    "react-json-view": "^1.21.3",
    "react-jss": "^10.10.0",
    "react-mentions": "^4.4.10",
    "react-portal": "^4.2.2",
    "react-range": "^1.8.14",
    "react-resize-detector": "^9.1.0",
    "react-textarea-autosize": "^8.5.3",
    "react-tooltip": "^5.25.0",
    "react-window": "^1.8.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@storybook/addon-actions": "^7.6.4",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/react": "^7.6.4",
    "@storybook/react-webpack5": "^7.6.4",
    "@types/draft-js": "^0.11.4",
    "@types/jest": "^29.5.11",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.55.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.6.15",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "immutable": "^5.0.0-beta.4",
    "jest": "^27.0.4",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "storybook": "^7.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
